<div class="container text-center">
    <div class="row justify-content-evenly ">
            <h1 class="col">MODIFICAR USUARIO</h1>
            <p class="col-2">BIENVENIDO ID: {{id}} {{persona}} </p>
            <a class="col-auto" href="http://localhost:3000/admin/inicio"><button type="button" class="bi bi-house btn btn-danger"> INICIO </button></a>
            <a class="col-auto" href="http://localhost:3000/admin/login/logout"><button type="button" class="bi bi-box-arrow-right btn btn-primary"> CERRAR SESION </button></a>        
    </div>

  {{!-- FORMULARIO --}}

    <div class="container mt-5">
       <div class="row justify-content-center  align-items-center">

            <div class="col-2 align-self-start">
                {{{imagen}}}
            </div>
           {{#each usuario}}
          <form action="/admin/usuarios/modificar" method="post" enctype="multipart/form-data" class="col-6"> 

                <div  class="input-group mb-3">
                    <span class="input-group-text col-2" id="inputGroup-sizing-default">USUARIO</span>
                    <input type="text" value="{{usuario}}" name="usuario" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="Nombre">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text col-2" id="inputGroup-sizing-default">E-Mail</span>
                    <input type="email" value="{{email}}" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                </div>

                <div class="input-group mb-3"> {{!--  IMAGEN --}}
                    <input type="file" name="imagen" class="form-control" id="imagen">
                </div>

                <p>* Al cargar una nueva imagen, se eliminara automaticamente la imagen anterior del servidor.</p>

                {{!-- CAMPOS OCULTOS --}}
                <input type="hidden" value="{{id}}" name="id" class="form-control" id="exampleFormControlInput1" placeholder="">
                <input type="hidden" value="{{img_id}}" name="img_id" class="form-control" id="exampleFormControlInput1" placeholder="">
                <input type="hidden" value="{{password}}" name="password" class="form-control" id="exampleFormControlInput1" placeholder="">

                <button type="submit" class="btn btn-primary">MODIFICAR</button>
             {{/each}}
        </form>

        {{#if error}}
                <p>{{message}}</p>
        {{/if}}

    </div> {{!-- FIN CONTENEDOR FORMULARIO --}}

     

    <div class="container p-3 mb-2 mt-5 bg-secondary text-white rounded">    {{!-- CONTENEDOR FORMULARIO ORIGINAL --}}
        <h3>Datos de usuario iniciales</h3>
        <table class="table">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>USUARIO</td>
                    <td>EMAIL</td>
                    <td>IMAGEN ID</td>
                </tr>
            </thead>
            {{#each usuario}}
            <tbody>
                <tr>
                    <td>{{id}}</td>
                    <td>{{usuario}}</td>
                    <td>{{email}}</td>
                    <td>{{img_id}}</td>
                </tr>
            </tbody>
            {{/each}}
        </table>
     </div> 
          
  </div>  {{!-- FIN CONTENEDOR PRINCIPAL --}}
    
