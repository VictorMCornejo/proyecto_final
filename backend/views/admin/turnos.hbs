<div class="container text-center">
    <div class="row justify-content-evenly">
           <h1 class="col">TURNOS</h1>
           <div class="col-auto"><a href="http://localhost:3000/admin/turnos/agregarturno"><button type="button" class="bi bi-calendar-plus-fill btn btn-success"> NUEVO </button></a></div>    
           <div class="col-auto"><a href="http://localhost:3000/admin/inicio"><button type="button" class="bi bi-house btn btn-danger"> INICIO </button></a></div>
           <div class="col-auto"><a href="http://localhost:3000/admin/login/logout"><button type="button" class="bi bi-box-arrow-right btn btn-primary"> CERRAR SESION</button></a></div>         
    </div>

  {{!-- TURNOS --}}
  <div> 
          <table class="table mt-5">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">DIA</th>
                    <th scope="col">HORA</th>
                    <th scope="col">NOMBRE</th>
                    <th scope="col">DNI</th>
                    <th scope="col">EMAIL</th>
                    <th scope="col-2" class="text-center">ACCIONES</th>
                  </tr>
                </thead>
                {{#each turnos}}
                    <tbody>
                      <tr>
                        <td>{{id}}</td>
                        <td>{{dia}}</td>
                        <td>{{hora}}</td>
                        <td>{{nombre}}</td>
                        <td>{{dni}}</td>
                        <td>{{email}}</td>
                        <td class="text-center">
                          <a class="btn btn-primary" href="/admin/turnos/eliminar/{{id}}"><i class="bi bi-trash3-fill"></i></a>
                          <a class="btn btn-primary" href="/admin/turnos/modificar/{{id}}"><i class="bi bi-pencil-fill"></i></a>
                        </td>
                      </tr>
                    </tbody>
                {{/each}}
          </table>
  </div>
</div>