<div class="container text-center">
    <div class="row justify-content-evenly align-items-center">
            <h1 class="col">AGREGAR TURNO</h1>
            <p class="col-2">BIENVENIDO ID: {{id}} {{persona}} </p>
            <a class="col-auto" href="http://localhost:3000/admin/inicio"><button type="button" class="bi bi-house btn btn-danger"> INICIO </button></a>
            <a class="col-auto" href="http://localhost:3000/admin/login/logout"><button type="button" class="bi bi-box-arrow-right btn btn-primary"> CERRAR SESION </button></a>        
    </div>

      {{!-- FORMULARIO CONSULTA --}}


    <div class="container mt-5">
        <div class="row justify-content-center">
            <form action="/admin/turnos/agregarturno" method="post" class="col-8 justify-content-center"> 

            <div class="input-group mb-3">
                <span class="input-group-text col-2" id="inputGroup-sizing-default">FECHA</span>
                <input type="date" name="dia" class="form-control" id="exampleFormControlInput1" placeholder="Fecha y hora" required>
            </div>

            <div  class="input-group mb-3">
                <span class="input-group-text col-2" id="inputGroup-sizing-default">DNI</span>
                <input type="text" name="dni" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="DNI" required>
            </div>

            <div  class="input-group mb-3">
                <span class="input-group-text col-2" id="inputGroup-sizing-default">USUARIO</span>
                <input type="text" name="nombre" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="Nombre" required>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text col-2" id="inputGroup-sizing-default">E-Mail</span>
                <input type="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" required>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text col-2" id="inputGroup-sizing-default">HORA</span>
                <input type="time" min="9:00" max="12:00" name="hora" class="form-control" id="exampleFormControlInput1" placeholder="Hora" required>
            </div>
            <p>(Horario de 9:00 y 12:00 a validar por administrador)</p>

            <button type="submit" class="btn btn-primary">ENVIAR</button>

            </form>
        </div>  

</div>