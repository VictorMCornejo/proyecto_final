<div class="container text-center">

    <div class="row justify-content-evenly w-auto">
           <h1 class="col">{{tittle}}</h1>
           <div class="col-auto"><a href="http://localhost:3000/admin/inicio"><button type="button" class="bi bi-house btn btn-danger"> INICIO </button></a></div>
           <div class="col-auto"><a href="http://localhost:3000/admin/login/logout"><button type="button" class="bi bi-box-arrow-right btn btn-primary"> CERRAR SESION</button></a></div>         
    </div>


  {{!-- TURNOS --}}

    {{!-- FORMULARIO --}}
   <div class="container mt-5">
        <div class="row justify-content-center">
            <form action="/admin/turnos/modificar" method="post" enctype="multipart-form-data" class="col-8 justify-content-center"> 
                {{#each turno}}

                    <div class="input-group mb-3">
                        <span class="input-group-text col-2" id="inputGroup-sizing-default">DIA</span>
                        <input type="date" name="dia" value="{{dia}}"class="form-control" id="exampleFormControlInput1" required>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text col-2" id="inputGroup-sizing-default">HORA</span>
                        <input type="time" min="9:00" max="12:00" name="hora" value="{{hora}}" class="form-control" id="exampleFormControlInput1" required>
                    </div>

                    <input type="hidden" name="id" value="{{id}}" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">

                    <div  class="input-group mb-3">
                        <span class="input-group-text col-2" id="inputGroup-sizing-default">DNI</span>
                        <input type="text" name="dni" value="{{dni}}" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                    </div>

                    <div  class="input-group mb-3">
                        <span class="input-group-text col-2" id="inputGroup-sizing-default">NOMBRE</span>
                        <input type="text" name="nombre" value="{{nombre}}" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text col-2" id="inputGroup-sizing-default">E-Mail</span>
                        <input type="email" name="email" value="{{email}}" class="form-control" id="exampleFormControlInput1" placeholder="{{email}} required">
                    </div>

                    <button type="submit" class="btn btn-primary mb-5">MODIFICAR</button>
                {{/each}}

            </form>

            {{#if error}}
                    <p>{{message}}</p>
            {{/if}}

        </div>   {{!-- FIN DIV FORMULARIO --}}


        {{!-- TURNO ORIGINAL --}}

        <div class="container p-3 mb-2 mt-5 bg-secondary text-white rounded">
            <h3>Turno original</h3>
            <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">DIA</th>
                        <th scope="col">HORA</th>
                        <th scope="col">NOMBRE</th>
                        <th scope="col">DNI</th>
                        <th scope="col">EMAIL</th>
                    </tr>
                    </thead>
                    {{#each turno}}
                        <tbody>
                        <tr>
                            <td>{{id}}</td>
                            <td>{{dia}}</td>
                            <td>{{hora}}</td>
                            <td>{{nombre}}</td>
                            <td>{{dni}}</td>
                            <td>{{email}}</td>
                        </tr>
                        </tbody>
                    {{/each}}
            </table>
        </div>
        
</div>